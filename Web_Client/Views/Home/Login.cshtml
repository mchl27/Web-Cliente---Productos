@{
    ViewData["Title"] = "Login";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container-fluid {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidenav, .main {
        /* height: 100%; */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidenav {
        background-color: #0f268d;
        color: #fff;
        width: 50%;
    }

        .sidenav .login-main-text {
            text-align: center;
            padding: 40px;
        }

    .main {
        /* background-color: #ffffff; */
        width: 50%;
    }

    .login-form {
        width: 100%;
        /* max-width: 400px; */
        padding: 40px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .login-form label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .login-form input[type="text"],
        .login-form input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            background-color: #fff;
            box-sizing: border-box;
        }

        .login-form button {
            width: 100%;
            padding: 10px;
            background-color: #0f268d;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .login-form button:hover {
                background-color: #0a1c64;
            }
</style>

<div class="container-fluid">
    <div class="row w-100">
        <div class="col-md-6 sidenav">
            <div class="login-main-text">
                <h2>Sistema de Productos</h2>
                <h3>Página de inicio de sesión</h3>
                <p>Inicia sesión para acceder.</p>
            </div>
        </div>
        <div class="col-md-6 main">
            <div class="login-form">
                <form method="post" asp-controller="Home" asp-action="Login">
                    <div class="form-group">
                        <label for="nombreUsuario">Nombre de usuario:</label>
                        <input type="text" name="nombreUsuario" id="nombreUsuario" required />
                    </div>
                    <div class="form-group">
                        <label for="contrasena">Contraseña:</label>
                        <input type="password" name="contrasena" id="contrasena" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                    <div asp-validation-summary="All"></div>
                </form>
                @* <form action="/Usuarios/Create">
                <button type="submit" class="btn btn-secondary">Registrar</button>
                </form> *@
            </div>
        </div>
    </div>
</div>

